! urxvt configurations
urxvt.preeditType:Root
urxvt.inputMethod:fcitx
urxvt.font:xft:Terminus(TTF):size=16,xft:WenQuanYi Zenhei:size=16
urxvt.boldFont:xft:Terminus(TTF):style=bold:size=16,xft:WenQuanYi Zenhei:style=bold:size=16
urxvt.meta8:false
urxvt.depth:32
urxvt.shading:60
!urxvt.blurRadius:16
!urxvt.backgroundPixmap: 
urxvt.background:rgba:1d00/1f00/2100/CE86
urxvt.foreground:#ccccee
! colors copied from blackarch
! Cyan theme
urxvt.color0:  #09070F
urxvt.color1:  #CC0000
urxvt.color2:  #E49A06
urxvt.color3:  #C4A000
urxvt.color4:  #3465A4
urxvt.color5:  #75507B
urxvt.color6:  #06989A
urxvt.color7:  #D3D7CF
urxvt.color8:  #555753
urxvt.color9:  #EF2929
urxvt.color10: #8A23E4
urxvt.color11: #FCE94F
urxvt.color12: #729FCF
urxvt.color13: #AD7FA8
urxvt.color14: #34E2E2
urxvt.color15: #EEEEEC
! open url in terminal
!urxvt.urlLauncher:w3m
!urxvt.matcher.button:1
!Urxvt.perl-ext-common:matcher
! scroll settings
urxvt.scrollBar:False
urxvt.scrollBar_right:True
urxvt.scrollBar_floating:True
urxvt.scrollstyle:plain
urxvt.mouseWheelScrollPage:True
urxvt.scrollTtyOutput:False
urxvt.scrollWithBuffer:True
urxvt.scrollTtyKeypress:True
!urxvt.cursorBlink:True
urxvt.saveLines:3000
urxvt.borderLess:False
! Xterm escape codes, word by word movement
urxvt.keysym.Control-Left:        \033[1;5D
urxvt.keysym.Shift-Control-Left:  \033[1;6D
urxvt.keysym.Control-Right:       \033[1;5C
urxvt.keysym.Shift-Control-Right: \033[1;6C
urxvt.keysym.Control-Up:          \033[1;5A
urxvt.keysym.Shift-Control-Up:    \033[1;6A
urxvt.keysym.Control-Down:        \033[1;5B
urxvt.keysym.Shift-Control-Down:  \033[1;6B

! Perl Script Extensions
urxvt.perl-ext-common:font-size,clipboard
! font size
urxvt.keysym.C-0x2d:perl:font-size:decrease
urxvt.keysym.C-0x2b:perl:font-size:increase
urxvt.keysym.C-0x3d:perl:font-size:reset
urxvt.keysym.C-0x3f:perl:font-size:show
! clipboard
urxvt.clipboard.autocopy: true
urxvt.keysym.Shift-Control-C: perl:clipboard:copy
urxvt.keysym.Shift-Control-V: perl:clipboard:paste
! to enable Ctrl+Shift to work
urxvt.iso14755: false
urxvt.iso14755_52: false
! pipe printing
urxvt.print-pipe: "cat > /dev/null"
